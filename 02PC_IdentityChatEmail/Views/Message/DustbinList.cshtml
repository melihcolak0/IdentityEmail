@model List<Message>
@{
    ViewData["Title"] = "DustbinList";
    Layout = "~/Views/Shared/_MessageLayout.cshtml";
}
<div class="email-list m-t-15">
    @foreach (var item in Model)
    {

        <div class="message">
            @if(ViewBag.email == item.ReceiverMail)
            {
                <a href="/Message/MessageDetailInBox/@item.MessageId">
                    <div class="col-mail col-mail-1">
                        <div class="email-checkbox">
                            <input type="checkbox" id="chk2">
                            <label class="toggle" for="chk2"></label>
                        </div>
                    </div>
                    <div class="col-mail col-mail-2 ">
                        <div class="subject">
                            Gelen: @($"{item.SenderMail} - {(string.IsNullOrEmpty(item.MessageDetail) ? "" : (item.MessageDetail.Length > 115 ? item.MessageDetail.Substring(0, 115) + "..." : item.MessageDetail))}")
                        </div>
                        <div class="date">@item.SendDate.ToString("dd MMM yyyy")</div>
                    </div>
                </a>
            }
            else if (ViewBag.email == item.SenderMail)
            {
                <a href="/Message/MessageDetailSendBox/@item.MessageId">
                    <div class="col-mail col-mail-1">
                        <div class="email-checkbox">
                            <input type="checkbox" id="chk2">
                            <label class="toggle" for="chk2"></label>
                        </div>
                    </div>
                    <div class="col-mail col-mail-2 ">
                        <div class="subject">
                           Gönderilen: @($"{item.ReceiverMail} - {(string.IsNullOrEmpty(item.MessageDetail) ? "" : (item.MessageDetail.Length > 115 ? item.MessageDetail.Substring(0, 115) + "..." : item.MessageDetail))}")
                        </div>
                        <div class="date">@item.SendDate.ToString("dd MMM yyyy")</div>
                    </div>
                </a>
            }
            
        </div>
    }
</div>