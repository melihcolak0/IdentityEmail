@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Identity Chat&Email Uygulaması</title>
    <link rel="icon" type="image/png" sizes="16x16" href="/quixlab-master/images/favicon.png">
    <link href="/quixlab-master/css/style.css" rel="stylesheet">

</head>

<body>
    <div id="preloader">
        <div class="loader">
            <svg class="circular" viewBox="25 25 50 50">
                <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="3" stroke-miterlimit="10" />
            </svg>
        </div>
    </div>
    
    <div id="main-wrapper">        
        <br />
        <!-- row -->
        <div class="container-fluid">
            <h3 class="text-center text-primary"> Identity ile E-Mail Uygulaması</h3>
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">                        
                        <div class="card-body d-flex">
                            <div class="email-left-box" style="width: 15%;">
                                <a href="/Message/CreateMessage" class="btn btn-primary btn-block">Yeni Mesaj Oluştur</a>
                                @await Component.InvokeAsync("_MessagesComponent")
                            </div>

                            <div class="email-right-box ml-4" style="width: 85%;">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <h3 class="mb-0">@ViewBag.page</h3>                                       
                                    <form method="get" class="mb-3">
                                        <input type="search"
                                               name="search"
                                               value="@Context.Request.Query["search"]"
                                               class="form-control w-150"
                                               placeholder="Ara..."
                                               aria-label="Search Dashboard" />
                                    </form>
                                </div>
                                @RenderBody()
                            </div>
                        </div>
                    </div>                   
                </div>
            </div>
        </div>
        <div class="footer">
            <div class="copyright">
                <p>Tüm hakları saklıdır. <a href="https://themeforest.net/user/quixlab">Quixlab</a> @DateTime.Now.Year</p>
            </div>
        </div>
    </div>

    <script src="/quixlab-master/plugins/common/common.min.js"></script>
    <script src="/quixlab-master/js/custom.min.js"></script>
    <script src="/quixlab-master/js/settings.js"></script>
    <script src="/quixlab-master/js/gleek.js"></script>
    <script src="/quixlab-master/js/styleSwitcher.js"></script>

</body>
</html>